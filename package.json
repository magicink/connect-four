{
  "name": "connect-n",
  "version": "2.0.0",
  "description": "It's like \"Connect 4\", but it supports a variable number of columns, rows, and players.",
  "private": true,
  "keywords": [
    "connect four",
    "game"
  ],
  "license": "ISC",
  "author": {
    "email": "magicink@gmail.com",
    "name": "Brandon Tom"
  },
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode development",
    "test": "jest"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/flow-typed/",
      "/node_modules/",
      "/test/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|ico)$": "<rootDir>/test/mocks/file.js",
      "\\.(css|less|scss)$": "<rootDir>/test/mocks/css.js"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "jest-environment-jsdom-global",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-arrow-functions": "^7.2.0",
    "@babel/plugin-transform-block-scoping": "^7.5.5",
    "@babel/plugin-transform-classes": "^7.5.5",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@storybook/cli": "^5.1.9",
    "@storybook/html": "^5.1.10",
    "autoprefixer": "^9.6.1",
    "autoprefixer-loader": "^3.2.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "core-js": "^3.1.4",
    "css-loader": "^3.1.0",
    "jest": "^24.8.0",
    "jest-environment-jsdom-global": "^1.2.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "regenerator-runtime": "^0.13.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.4.1",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.5"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ]
  }
}
